{% if app.user is same as event.host %}
    {% for request in event.eventRequests %}
        <tr>
            <td></td>
            <td colspan="4"><a href="{{ path('app_profil_public', {id: event.host.id}) }}">{{ request.user }}</a> souhaite se joindre Ã  vous</td>
            <td>
            {% if request.status == 'PENDING' %}
                <a href="{{ path('app_event_requests_status', {id: request.id, status: 'ACCEPTED'}) }}" class="btn btn-success rounded-pill">Accepter</a>
                <a href="{{ path('app_event_requests_status', {id: request.id, status: 'REFUSED'}) }}" class="btn btn-danger rounded-pill">Refuser</a>
            {% else %}
                <button class="btn btn-secondary rounded-pill" disabled>{% include 'event/_translate_status_request.html.twig' %}</button>
                <a class="btn btn-danger rounded-pill" href="{{ path('app_event_requests_delete', {id: request.id}) }}"><i class="fa-solid fa-trash-can"></i></a>
            {% endif %}
            </td>
        </tr>
    {% endfor %}
{% endif %}