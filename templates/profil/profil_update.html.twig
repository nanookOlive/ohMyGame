{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Profil</li>

        </ol>
    </nav>

    <div><h2 class="title">Editer mon profil </h2></div>
    <div class="row bg-light border border-3 rounded-5 p-3 mt-5" >
        
        <div class="col-md-6 " >
            {{ form_start(form) }}
            {{ form_errors(form) }}
            
            <div class="row">
                <div class="col-6">
                    {{form_row(form.firstname)}}
                    {{form_row(form.lastname)}}
                    {{form_row(form.alias)}}
                    {{form_row(form.birthAt)}}
                </div>
                <div class="col-6">
                    {{form_row(form.address)}}
                    {{form_row(form.postalCode)}}
                    {{form_row(form.city)}}
                    {{form_row(form.avatar)}}
                </div>
            </div>


           
        </div>


        <div class="col-md-6 d-flex justify-content-center">
        
            <img src="{{ asset('images/uploads/' ~ user.avatar) }}" class="img-fluid mt-1 rounded rounded-5 " style="height:300px"alt="image avatar">
    
        </div>

        <div class="d-flex justify-content-around">   <button type="submit" class="btn btn-success rounded-pill">Valider mes changements</button>{{ form_end(form) }}{% include 'profil/_delete_profil_form.html.twig' %}

        </div> 
    </div>

{% endblock %}