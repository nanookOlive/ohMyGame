{% extends 'admin/base.html.twig' %}

{% block title %}{{ game.title }}{% endblock %}

{% block cardheader %}
    <h1>{{ game.title }}</h1>
    <a class="btn btn-link" href="{{ path('app_admin_game_index') }}">Retour</a>
{% endblock %}
    
{% block cardbody %}
    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ game.title }}</td>
            </tr>
            <tr>
                <th>MinimumAge</th>
                <td>{{ game.minimumAge }}</td>
            </tr>
            <tr>
                <th>ReleasedAt</th>
                <td>{{ game.releasedAt ? game.releasedAt|format_datetime('full', 'short', locale='fr')|capitalize : '' }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ game.rating }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ game.duration }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td>{{ game.imageUrl }}</td>
            </tr>
            <tr>
                <th>PlayersMin</th>
                <td>{{ game.playersMin }}</td>
            </tr>
            <tr>
                <th>PlayersMax</th>
                <td>{{ game.playersMax }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ game.slug }}</td>
            </tr>
            <tr>
                <th>ShortDescription</th>
                <td>{{ game.shortDescription }}</td>
            </tr>
            <tr>
                <th>LongDescription</th>
                <td>{{ game.longDescription }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}

{% block cardfooter %}
    <div class="d-flex justify-content-between">
        <div>
            <a href="{{ path('app_admin_game_edit', {'id': game.id}) }}">Editer</a>
        </div>
        {{ include('admin/game/_delete_form.html.twig') }}
    </div>
{% endblock %}