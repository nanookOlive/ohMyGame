{% extends 'admin/base.html.twig' %}

{% block title %}{{ game.title }}{% endblock %}
{% block cardheader %}
    <h1>{{ game.title }}</h1>
    <a class="btn btn-link" href="{{ path('app_admin_review_index') }}">Retour</a>
{% endblock %}

{% block cardbody %}
<table class="table">
        <tbody>
            <tr>
                <th>jeu</th>
                <td>{{ game.title }}</td>
            </tr>
            <tr>
                <th>Cr√©er le</th>
                <td>{{ review.createdAt|format_datetime('medium', 'none', locale='fr') }}</td>
            </tr>
            <tr>
                <th>Utilisateur</th>
                <td>{{ review.member.alias }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ review.rating }}/5
                {% set rating = review.rating %}
                {% include "partials/_star_counter.html.twig" %}
                </td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ review.content }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}

{% block cardfooter %}
    <div class="d-flex justify-content-between">
    {{ include('admin/review/_delete.html.twig') }}
    </div>    
{% endblock %}